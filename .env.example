# Local (SQLite)
ASTRO_DB_REMOTE_URL=file:.astro/content.db

# Public app metadata
PUBLIC_APP_KEY=career-planner

# Production (Turso/libSQL)
ASTRO_DB_REMOTE_URL=libsql://your-db-host.turso.io
ASTRO_DB_APP_TOKEN=your-app-token
# If Astro Studio is used, set this too:
# ASTRO_STUDIO_APP_TOKEN=your-studio-token

# Parent integrations (required in production)
PARENT_APP_URL=https://ansiversa.com
ANSIVERSA_WEBHOOK_SECRET=your-webhook-secret
ANSIVERSA_DASHBOARD_WEBHOOK_URL=https://ansiversa.com/api/webhooks/career-planner-activity.json
ANSIVERSA_DASHBOARD_WEBHOOK_SECRET=your-dashboard-webhook-secret
# Optional notification webhook override
# ANSIVERSA_NOTIFICATIONS_WEBHOOK_URL=https://ansiversa.com/api/webhooks/notifications.json
# ANSIVERSA_NOTIFICATIONS_WEBHOOK_SECRET=your-notifications-webhook-secret
