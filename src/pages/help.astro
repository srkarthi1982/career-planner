---
import { AvBreadcrumb, AvButton, AvCard, AvContainer } from "@ansiversa/components";
import AppShell from "../layouts/AppShell.astro";

const title = "Help – Career Planner";
const description = "Guidance for getting started with Career Planner.";
---

<AppShell title={title} description={description}>
  <section class="av-faq-public__crumb">
    <AvContainer>
      <AvBreadcrumb items={[{ label: "Home", href: "/" }, { label: "Help" }]} />
    </AvContainer>
  </section>

  <section class="av-section">
    <AvContainer>
      <div class="av-auth-stack-lg">
        <AvCard className="av-auth-stack-md">
          <div>
            <p class="av-kicker">Career Planner</p>
            <h1 class="av-section-title">Help</h1>
            <p class="av-text-soft">
              Career Planner helps you map target roles, milestones, and weekly actions for the
              next 30–180 days.
            </p>
          </div>
          <div class="av-row-wrap">
            <AvButton href="/">Back to overview</AvButton>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">How to start</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Create one active goal with a target role.</p>
              <p class="av-text-soft">• Break it into 3–5 milestones with dates.</p>
              <p class="av-text-soft">• Add tasks that you can complete this week.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Key features</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Goals with milestones and tasks.</p>
              <p class="av-text-soft">• Progress tracking + next-action focus.</p>
              <p class="av-text-soft">• Activity + dashboard summaries for the parent app.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Free vs Pro</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Free: 1 active goal, 5 milestones, 20 tasks.</p>
              <p class="av-text-soft">• Pro: Unlimited goals, milestones, and tasks.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Troubleshooting</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Enable DEV_BYPASS_AUTH if you lack a session cookie.</p>
              <p class="av-text-soft">• Ensure env vars are set before build.</p>
            </div>
          </div>
        </AvCard>
      </div>
    </AvContainer>
  </section>
</AppShell>
